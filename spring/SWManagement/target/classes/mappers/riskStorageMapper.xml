<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sw.web.mapper.riskStorageMapper">
  
   <insert id="insert"> 
   		insert into risk_storage values
 		(#{risk_id},#{item_num},#{result})
     </insert> 
 	
 	<select id="selectAll" resultType="RiskStorageVO">
     <![CDATA[
 		select * from risk_storage
      ]]> 
     </select>
     
 	 <select id="selectById" resultType="RiskStorageVO">
 		select * from risk_storage where risk_id = #{id}
     </select> 
             
 	 <select id="selectByItemNum" resultType="RiskStorageVO">
 		select * from risk_storage where item_num = #{item_num} and risk_id=#{risk_id}
     </select> 
                    
    <update id="update">
	 	update risk_storage set result=#{result}
		 where risk_id=#{risk_id}
    </update>

    <delete id="delete">
		delete from risk_storage where risk_id = #{id}
    </delete>
 		
</mapper>  